<script type="x/template" id="vue-category-breadcrumbs">

    <nav class="container-max small hidden-sm-down" v-if="breadcrumbs.length > 0">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">
                    <i class="fa fa-home" aria-hidden="true"></i>
                </a>
            </li>
            <li class="breadcrumb-item" :class="{'active': index == breadcrumbs.length - 1}" v-for="(index, breadcrumb) in breadcrumbs">
                <span v-if="index == breadcrumbs.length - 1">${ breadcrumb.details[0].name }</span>
                <a href="javascript:void(0)" v-if="index != breadcrumbs.length - 1" @click="renderItems(breadcrumb)">${ breadcrumb.details[0].name }</a>
            </li>
        </ul>
    </nav>

</script>