{% extends 'Ceres::Homepage.Homepage' %}

{% set lang         = services.sessionStorage.getLang() %}

{% set homepageTopsellerID  = config("CeresColorful.homepage.homepageTopsellerID") %}
{% set homepageSlide1Img  = config("CeresColorful.homepage.homepageSlide1Img") %}
{% set homepageSlide2Img  = config("CeresColorful.homepage.homepageSlide2Img") %}

{% set homepageSectionHeadingDE  = config("CeresColorful.homepage.homepageSectionHeadingDE") %}
{% set homepageSectionHeadingEN  = config("CeresColorful.homepage.homepageSectionHeadingEN") %}

{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}
{% set paginatedResult      = services.itemLoader.loadForTemplate('Ceres::ItemList.ItemListView', itemLoaderPresets.categoryList, {'categoryId':homepageTopsellerID, 'page':1, 'items':8, 'facets': facetParams, 'sorting': itemSort}) %}

{% set itemList             = paginatedResult.documents %}

{% block ThemeHomepage %}

{{ component( "Ceres::ItemList.Components.ItemList") }}
{{ component( "Ceres::ItemList.Components.CategoryImageCarousel") }}
{{ component( "Ceres::Basket.Components.AddToBasket" ) }}

<div class="home container-max">

<div class="row page-content">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="{{ homepageSlide1Img }}" alt="1200x400">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="{{ homepageSlide2Img }}" alt="1200x400">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <i class="fa fa-chevron-left fa-5x" aria-hidden="true"></i>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <i class="fa fa-chevron-right fa-5x" aria-hidden="true"></i>
        <span class="sr-only">Next</span>
      </a>
    </div>

</div>

    <div class="row page-content categoriegrid">
        <div class="col-xs-12 p-y-2">
            <h1 class="m-b-2">
                {% if lang == "de" %}
                    {{ homepageSectionHeadingDE }}
                {% elseif lang == "en" %}
                    {{ homepageSectionHeadingEN }}
                {% endif %}
            </h1>
            
            <ul class="product-list row grid">
                {% for item in itemList %}
                    <li class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        {% include "Ceres::Category.Item.Partials.CategoryListItem" with { 'item': item } %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endblock %}